{
  "name": "@wyze/github-release",
  "version": "1.0.0",
  "description": "Generate a GitHub release.",
  "license": "MIT",
  "repository": "wyze/github-release",
  "author": {
    "name": "Neil Kistner",
    "email": "neil.kistner@gmail.com",
    "url": "https://neilkistner.com"
  },
  "bin": {
    "github-release": "bin/index.js"
  },
  "scripts": {
    "build": "rio -o bin/index.js -b '#!/usr/bin/env node' -e execa,gh-got,read-pkg bin/src/index.ts",
    "clean": "rimraf bin/index.js",
    "postbuild": "shx chmod a+x bin/index.js",
    "postversion": "node bin",
    "prebuild": "yarn clean",
    "prettier": "prettier --write \"{bin,src}/**/*.ts\"",
    "preversion": "yarn build",
    "test": "jest",
    "version": "changelog"
  },
  "files": [
    "bin/index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "generate",
    "github",
    "release"
  ],
  "dependencies": {
    "execa": "^4.0.0",
    "gh-got": "^9.0.0",
    "read-pkg": "^5.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/read-pkg": "^5.1.0",
    "@wyze/rio": "^1.2.0",
    "jest": "^25.2.3",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "shx": "^0.3.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
